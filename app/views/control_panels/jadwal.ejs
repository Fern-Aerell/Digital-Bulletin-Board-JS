<!doctype html><html lang=en><meta charset=UTF-8><meta name=viewport content="width=device-width,initial-scale=1"><title>Mading Digital Control Panel - Jadwal</title><link rel=stylesheet href=css/jadwal.css> <%- include("../../templates/control_panels/sidebar.ejs") %> <div class=container><h1>JADWAL</h1><div> <% if(jadwal_list && jadwal_list.length > 0) { %> <% jadwal_list.forEach((item) => { %> <div class=jadwal-container><div class=jadwal-head><div><img src="<%= `${process.env.BASE_URL}:${process.env.PORT}/upload/images/${item.image}` %>" alt="jadwal icon"><h1><%= item.title %></h1></div><span><%
                                var indonesianDays = ['Minggu', 'Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu'];
                                var dateTime = new Date(item.date);
                                var englishDayIndex = dateTime.getDay();
                                var indonesianDay = indonesianDays[englishDayIndex];
                                var formattedDateTime = indonesianDay + ', ' + dateTime.toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit'});
                                %><%= formattedDateTime %></span></div><div class=jadwal-body><p><%= item.text %><p><%= item.text_its_time %><div><a class=edit-button href="?edit_popup=true&edit_id=<%= item.id %>&edit_image=false">Edit</a> <a class=delete-button href="?delete=<%= item.id %>"><img src=icon/trash.png alt="delete icon"></a></div></div></div> <% }); %> <% } %> <a href="?add_popup=true" class=add-jadwal-container><img src=icon/add.png alt="add icon"></a></div></div> <% if(add_popup) { %> <div class=add-popup-background><form class=add-popup-container action="" method=POST enctype=multipart/form-data><h1>Tambah Jadwal</h1><br><label for=image>Image</label> <input type=file name=image id=image accept=image/png required> <label for=title>Title</label> <input name=title id=title placeholder="Masukkan title" required> <label for=text>Text</label> <input name=text id=text placeholder="Masukkan text" required> <label for=text_its_time>Text Dynamic Island</label> <input name=text_its_time id=text_its_time placeholder="Masukkan text untuk dynamic island" required> <label for=date>Datetime</label> <input type=datetime-local name=date id=date required><br><div><button class=add-button type=submit>Tambah</button> <a href="?add_popup=false" class=cancel-button>Batal</a></div></form></div> <% } %> <% if(edit_popup && edit_result) { %> <div class=add-popup-background><form class=add-popup-container action="" method=POST enctype=multipart/form-data><h1>Edit Jadwal</h1><br><label for=image>Image</label> <% if(edit_image && edit_image == true) { %> <input type=file name=image id=image accept=image/png required> <% } else { %> <img src="<%= `${process.env.BASE_URL}:${process.env.PORT}/upload/images/${edit_result.image}` %>" alt=image> <a href="<%= url.replace("edit_image=false", "edit_image=true") %>">Ubah foto</a> <% } %> <label for=title>Title</label> <input name=title id=title placeholder="Masukkan title" required value="<%= edit_result.title %>"> <label for=text>Text</label> <input name=text id=text placeholder="Masukkan text" required value="<%= edit_result.text %>"> <label for=text_its_time>Text Dynamic Island</label> <input name=text_its_time id=text_its_time placeholder="Masukkan text untuk dynamic island" required value="<%= edit_result.text_its_time %>"> <label for=date>Datetime</label> <input type=datetime-local name=date id=date required value="<%= edit_result.date %>"><br><div><button class=add-button type=submit>Edit</button> <a href="?edit_popup=false" class=cancel-button>Batal</a></div></form></div> <% } %>